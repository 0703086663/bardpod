<div class="wrapper cart-container">
    <section class="h-100 h-custom">
        <div class="h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card card-registration card-registration-2" style="border-radius: 15px;">
                    <form action="/checkout" method="post">
                        <div class="card-body p-0">
                            <div class="row g-0">
                            <div class="col-lg-8">
                                <div class="p-5">
                                <div class="d-flex justify-content-between align-items-center mb-5">
                                    <h1 class="fw-bold mb-0 text-black">Giỏ hàng</h1>
                                    {{#if session.cart}}
                                    <h6 class="mb-0 text-muted">{{session.cart.totalQty}} sản phẩm</h6>
                                    {{else}}
                                    <h6 class="mb-0 text-muted">0 sản phẩm</h6>
                                    {{/if}}
                                </div>
                                <hr class="my-4">
                                {{#if pod}}
                                    {{#each pod}}
                                        <div class="row mb-4 d-flex justify-content-between align-items-center">
                                            <div class="col-md-2 col-lg-2 col-xl-2">
                                            <img
                                                src="./uploads/{{this.item.image}}"
                                                class="img-fluid rounded-3" alt="Cotton T-shirt">
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-3">
                                            <h6 class="text-black mb-0">{{this.item.name}}</h6>
                                            <h6 class="text-muted">{{this.item.buff}} hơi</h6>
                                            </div>
                                            <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                            {{!-- <button class="btn btn-link px-2"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                <i class="fas fa-minus"></i>
                                            </button> --}}
                                            <h6 class="text-muted">{{this.qty}} đơn vị</h6>
                                            <input type='hidden' name="quantity" value={{this.qty}}>
                                            {{!-- <input min="0" name="quantity" value="{{this.qty}}" type="number"
                                                class="form-control form-control-sm" disabled/> --}}

                                            {{!-- <button class="btn btn-link px-2"
                                                onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                <i class="fas fa-plus"></i>
                                            </button> --}}
                                            </div>
                                            <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                            <h6 class="mb-0">{{formatCurrency this.price}} VND</h6>
                                            </div>
                                            <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                            <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                                            </div>
                                        </div>

                                        <hr class="my-4">
                                    {{/each}}
                                {{else}}
                                <h3>Không có sản phẩm trong giỏ hàng!</h3>
                                <a id="add-one-href" href="/pod">Thêm sản phẩm?</a>
                                {{/if}}
                                <div class="pt-5">
                                    <h6 class="mb-0"><a href="/pod" class="text-body"><i
                                        class="fas fa-long-arrow-alt-left me-2"></i>Quay về shop</a></h6>
                                </div>
                                </div>
                            </div>
                            <div class="col-lg-4 bg-grey">
                                <div class="p-5">
                                <h3 class="fw-bold mb-5 mt-2 pt-1">Tổng kết</h3>
                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-4">
                                    {{#if session.cart}}
                                    <h5 class="text-uppercase">items:   {{session.cart.totalQty}}</h5>
                                    <h5>{{formatCurrency session.cart.totalPrice}} VND</h5>
                                    {{/if}}
                                </div>


                                <div class="mb-4 pb-2">
                                {{!-- <h5 class="text-uppercase mb-3">Shipping</h5> --}}
                                    <select class="form-control" name="shipping" required>
                                        <option value="">Chọn phương thức giao hàng</option>
                                        <option value="24h">Trong 24h - 34.000 VND (HCM City)</option>
                                        <option value="asap">Lập tức - 30.000 VND to 70.000 VND (HCM City)</option>
                                        <option value="3days">Trong 3 days - 30.000 VND (khác HCM)</option>
                                    </select>
                                </div>

                                <h5 class="text-uppercase mb-3">Thông tin</h5>

                                <div class="mb-2">
                                    <div class="form-outline">
                                    <input type="text" placeholder="Nhập mã giảm giá" name="promocode" class="form-control" />
                                    </div>
                                </div>

                                {{!-- <div class="mb-2">
                                    <div class="form-outline">
                                    <input type="text" placeholder="Enter name" class="form-control" />
                                    </div>
                                </div> --}}

                                <div class="mb-2">
                                    <div class="form-outline">
                                    <input type="text" placeholder="Nhập số điện thoại" class="form-control" name="phone" value="{{user.phone}}" required
                                    oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*?)\..*/g, '$1');"/>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <div class="form-outline">
                                    <input type="text" placeholder="Nhập địa chỉ" name="address" class="form-control" value="{{user.address}}" required/>
                                    </div>
                                </div>

                                <div class="mb-2">
                                    <div class="form-outline">
                                    <input type="email" placeholder="Nhập email" name="email" class="form-control" value="{{user.email}}" required/>
                                    </div>
                                </div>

                                <div class="mb-5">
                                    <div class="form-outline">
                                    <textarea type="text" placeholder="Ghi chú" name="note" class="form-control" /></textarea>
                                    </div>
                                </div>

                                <hr class="my-4">

                                <div class="d-flex justify-content-between mb-5">
                                    {{#if session.cart}}
                                    <h5 class="text-uppercase">Tổng cộng</h5>
                                    <h5>{{formatCurrency session.cart.totalPrice}} VND</h5>
                                    {{/if}}
                                </div>

                                {{#if session.cart}}
                                <button type="submit" class="btn btn-outline-dark btn-block btn-lg form-control"
                                    data-mdb-ripple-color="dark">Đặt hàng</button>
                                {{else}}
                                <button type="submit" class="btn btn-dark btn-block btn-lg form-control"
                                    data-mdb-ripple-color="dark" disabled>Đặt hàng</button>
                                {{/if}}

                                </div>
                            </div>
                            </div>
                        </div>
                </form>
                </div>
            </div>
            </div>
        </div>
    </section>
</div>