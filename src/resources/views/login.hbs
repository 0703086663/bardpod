
    <a href="/register">
        <div class="login-sidenav">
            <div class="login-main-text">
            <h2> Đăng nhập</h2>
            <p class="text-muted">Ấn vào đẩy để <span>ĐĂNG KÍ</span> nếu bạn không có tài khoản.</p>
            </div>
        </div>
    </a>

    <div class="login-main">
        <div class="col-md-6 col-sm-12">
        <div class="login-form">
            <form action="/validation" method="POST">
                <div class="form-group">
                    <label>Tên đăng nhập</label>
                    <input type="text" id="username" name="username" class="form-control mt-2" placeholder="Nhập email hoặc số điện thoại" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="password" name="password" class="form-control mt-2" placeholder="Nhập mật khẩu" required>
                </div>
                <div class="mt-1 row">
                    <div class="col-md-4 col-xs-6 col-lg-8 col-6">
                    </div>

                    <div class="col-md-8 col-xs-6 col-lg-4 col-6">
                    <!-- Simple link -->
                        <a href="#!"><i>Quên mật khẩu?</i></a>
                    </div>
                </div>

                {{#if msgLog}}
                    <div class="p-2 alert alert-danger mt-1" role="alert">
                        <span>{{msgLog}}</span>
                    </div>
                {{/if}}

                <div class="mt-4">
                    <button type="submit" class="btn btn-black">Đăng nhập</button>
                </div>
            </form>
        </div>
        </div>
    </div>