    <div class="hero-text">
      <h1>Good<br><span>pod</span><br> take you<br>good places</h1>
      <a href="#">
        <button class="btn btn-outline-dark">Shop now!</button>
      </a>
    </div>
  </div>

  <div class="wrap">
      <div class="pod-sections">
        <button class="active" data-switch="#pod-best-seller">best sellers</button>
        <button data-switch="#pod-available">new arrivals</button>
      </div>

    <div id="pod-sections-index">  
      <div id="pod-best-seller">
        <section class="cards">
          {{#each podBestseller}}
            <div class="card">
              <div class="img-container">
                <a href="/pod/{{this._id}}?podDetailTitle=Best%20Seller&brandid={{this.brand._id}}">
                  <img src="../uploads/{{this.image}}" alt="{{this.name}}" class="images-index">
                  <div class="overlay">Chi tiết</div>
                </a>
              </div>
              <div class="content">
                <span class="badge-text">{{this.brand.name}}</span>
                <div class="badge-headline">{{this.name}}</div>
                <span class="badge-text">{{this.type.name}}</span>
                <div class="badge-price mb-4">{{formatCurrency this.price}} VND</div>
              </div>
            </div>
          {{/each}}
        </section>
      </div> 

      <div id="pod-available" style="display:none">
        <section class="cards">
          {{#each podAvailable}}
            <div class="card">
              <div class="img-container">
                <a href="/pod/{{this._id}}?podDetailTitle=New%20Arrival&brandid={{this.brand._id}}">
                  <img src="../uploads/{{this.image}}" alt="{{this.name}}" class="images-index">
                  <div class="overlay">Chi tiết</div>
                </a>
              </div>
              <div class="content">
                <span class="badge-text">{{this.brand.name}}</span>
                <div class="badge-headline">{{this.name}}</div>
                <span class="badge-text">{{this.type.name}}</span>
                <div class="badge-price mb-4">{{formatCurrency this.price}} VND</div>
              </div>
            </div>
          {{/each}}
        </section>
      </div>
    </div>
    
